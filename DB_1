    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        
        String dccId = jTextField1.getText();
        
        String name = jTextField2.getText();
        
        DocConn dc = new DocConn();
        dc.insertDccInfo(Integer.valueOf(dccId), name);
        
    }                                        

